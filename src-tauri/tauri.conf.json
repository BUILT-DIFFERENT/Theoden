{
  "$schema": "./gen/schemas/desktop-schema.json",
  "productName": "Codex",
  "mainBinaryName": "codex-desktop",
  "version": "0.1.0",
  "identifier": "com.openai.codex.desktop",
  "build": {
    "beforeBuildCommand": "pnpm app:build",
    "beforeDevCommand": "pnpm app:dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Codex",
        "width": 1400,
        "height": 900,
        "decorations": false,
        "useHttpsScheme": true
      }
    ],
    "withGlobalTauri": true,
    "security": {
      "capabilities": ["default"]
    }
  }
}
