{
  "$schema": "./gen/schemas/desktop-schema.json",
  "productName": "Codex Command Center",
  "mainBinaryName": "codex-command-center",
  "version": "0.1.0",
  "identifier": "com.theoden.codexcommandcenter",
  "build": {
    "beforeBuildCommand": "pnpm app:build",
    "beforeDevCommand": "pnpm app:dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Codex Command Center",
        "width": 1400,
        "height": 900,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "capabilities": ["default"]
    }
  }
}
