{
  "name": "codex-monorepo",
  "private": true,
  "description": "Tools for repo-wide maintenance.",
  "scripts": {
    "sync:electron-ui": "node sync-electron-ui.cjs",
    "prepare:desktop-runtime": "node scripts/prepare-desktop-runtime.cjs",
    "desktop:dev:compat": "node scripts/run-desktop.cjs dev compat",
    "desktop:dev:rewrite": "node scripts/run-desktop.cjs dev rewrite",
