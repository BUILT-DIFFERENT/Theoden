    "parity:test:cloud-sidebar-settings": "vitest run src/app/components/sidebar/AppSidebar.test.tsx src/app/routes/SettingsPage.test.tsx src/app/services/cli/cloudRuns.test.ts src/app/services/cli/config.test.ts",
    "parity:audit:check": "node scripts/check-parity-audit.cjs",
    "parity:check:baseline-lock": "node scripts/check-parity-baseline-lock.cjs",
    "parity:check:bridge-boundary": "node scripts/check-parity-bridge-boundary.cjs",
    "parity:check:renderer-mode-matrix": "node scripts/check-parity-renderer-mode-matrix.cjs",
    "parity:check:routes-scope": "node scripts/check-parity-routes-scope.cjs",
    "parity:check:ui-motion": "node scripts/check-parity-ui-motion.cjs",
    "parity:check:feature-contract": "node scripts/check-parity-feature-contract.cjs",
    "desktop:dev": "tauri dev",
    "desktop:build": "tauri build",
    "desktop:cli": "tauri",
    "prepare": "husky install"
  },
