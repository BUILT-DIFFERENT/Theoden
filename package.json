    "format:app:fix": "prettier --write \"src/**/*.{ts,tsx,css,md,json}\"",
    "frontend:dev": "vite",
    "frontend:build": "tsc -b && vite build",
    "frontend:preview": "vite preview",
    "frontend:test": "vitest run",
    "parity:test:routes": "vitest run src/app/router.test.tsx",
    "parity:test:thread-slice": "vitest run src/app/routes/ThreadPage.test.tsx src/app/services/cli/threadMessages.test.ts",
    "parity:test:review-git-terminal": "vitest run src/app/services/cli/diffSummary.test.ts src/app/services/cli/protocolCoverage.test.ts src/app/services/cli/terminalSessions.test.ts src/app/services/git/changes.test.ts src/app/services/git/status.test.ts src/app/services/git/worktrees.test.ts",
